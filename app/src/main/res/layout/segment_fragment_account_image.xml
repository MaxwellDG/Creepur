<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorTransparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragmentAccountImageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fragmentAccountImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Caption"
        app:layout_constraintBottom_toTopOf="@+id/fragmentAccountImageImage"
        app:layout_constraintEnd_toEndOf="@+id/fragmentAccountImageImage"
        app:layout_constraintStart_toStartOf="@+id/fragmentAccountImageImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentAccountImagesUps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentAccountImageImage"
        app:layout_constraintEnd_toStartOf="@+id/fragmentAccountImageImage"
        app:layout_constraintTop_toTopOf="@+id/fragmentAccountImageImage" />

    <TextView
        android:id="@+id/fragmentAccountImagesDowns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="@+id/fragmentAccountImageImage"
        app:layout_constraintStart_toEndOf="@+id/fragmentAccountImageImage"
        app:layout_constraintTop_toTopOf="@+id/fragmentAccountImageImage" />
</androidx.constraintlayout.widget.ConstraintLayout>